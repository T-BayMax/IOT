<?xml version="1.0" encoding="utf-8"?>
<com.bjike.wl.iot.ui.view.CustomToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:padding="@dimen/x4"

    app:popupTheme="@style/AppTheme">

    <TextView
        android:id="@+id/lt_main_title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/back"
        android:gravity="center"
        android:padding="@dimen/x4"
        android:layout_marginLeft="@dimen/x6"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/x14"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lt_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/str_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x16"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lt_main_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:drawableRight="@mipmap/more"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x14"
        android:layout_marginRight="@dimen/x6"
        android:visibility="visible" />

</com.bjike.wl.iot.ui.view.CustomToolbar>