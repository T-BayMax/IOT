<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.bjike.wl.iot.ui.activtiy.EquipmentDetailsActivity">

    <include layout="@layout/view_custom_toolbar" />

    <View
        android:layout_width="match_parent"
        android:background="@color/item_border"
        android:layout_height="2dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x16"
                android:textSize="@dimen/x16"
                android:text="名称" />
            <View
                android:layout_width="match_parent"
                android:background="@color/item_border"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x16"
                android:textSize="@dimen/x16"
                android:text="特性"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/item_border"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_scene"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x14"
                android:textSize="@dimen/x16"
                android:text="用途"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/item_border"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x14"
                android:textSize="@dimen/x16"
                android:text="说明"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
