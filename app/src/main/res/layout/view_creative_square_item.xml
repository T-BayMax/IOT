<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_view"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_margin="@dimen/x2">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x4"
        android:text="标题"
        android:textSize="@dimen/x16" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x4"
        android:text="内容"
        android:textSize="@dimen/x12" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/x2"
            android:layout_toLeftOf="@id/ll_like"
            android:text="用户名"
            android:textSize="@dimen/x14" />

        <LinearLayout
            android:id="@+id/ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ll_stamp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/x2">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="@dimen/x14"
                android:layout_height="@dimen/x14"
                android:src="@mipmap/img_like" />

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1万"
                android:textSize="@dimen/x12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/x2">

            <ImageView
                android:id="@+id/iv_stamp"
                android:layout_width="@dimen/x14"
                android:layout_height="@dimen/x14"
                android:src="@mipmap/img_stamp" />

            <TextView
                android:id="@+id/tv_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1万"
                android:textSize="@dimen/x12" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/x4"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:textSize="@dimen/x14"
            android:text="广州市"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>